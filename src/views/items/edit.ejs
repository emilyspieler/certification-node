<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <div class="container">
        <div class="jumbotron">
      <h1>Edit Post</h1>

      <form action="/lists/<%= item.listId %>/items/<%= item.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Post title</label>
          <input value="<%= item.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="description">Post body</label>
          <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"><%= item.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  </div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
