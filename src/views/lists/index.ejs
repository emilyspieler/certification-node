<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>Your Current List</h1>

      <ul class="list-group">

        <a href="/items/new" class="btn btn-success">New Topic</a>

        <% lists.forEach((list) => { %>

          <li class="list-group-item">
            <a href="/lists/<%= list.id %>"> <%= list.title %> </a>
          </li>
        <% }) %>
      </ul>

    </main>
  </body>
</html>
